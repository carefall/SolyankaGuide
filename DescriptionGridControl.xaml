<UserControl x:Class="SolyankaGuide.DescriptionGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolyankaGuide"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#99000000" CornerRadius="10" Margin="15,15,5,10">
        <ScrollViewer x:Name="Scroller" VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <WrapPanel x:Name="Descriptions" Margin="15" VerticalAlignment="Top" HorizontalAlignment="Stretch" Orientation="Horizontal"/>
        </ScrollViewer>
    </Border>
</UserControl>
