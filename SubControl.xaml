<UserControl x:Class="SolyankaGuide.SubControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolyankaGuide"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid Background="#99000000" Height="250" Width="300" MouseDown="Grid_MouseDown">
        <Image x:Name="SubImage" Source="/Assets/Images/icon0.png" VerticalAlignment="Top" HorizontalAlignment="Center" Width="280" Margin="0,10,0,0" Stretch="Uniform"/>
        <TextBlock x:Name="SubName" Text="Принести флешку торговцу" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="300" Height="30" TextAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Yellow" Margin="0,0,0,10" Background="#00000000"/>
    </Grid>
</UserControl>
