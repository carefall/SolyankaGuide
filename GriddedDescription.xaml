<UserControl x:Class="SolyankaGuide.GriddedDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolyankaGuide"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="640">
    <Viewbox x:Name="ViewBox" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="Uniform">
        <Border Background="#995283B9" CornerRadius="5" Padding="20, 20, 20, 10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <Image x:Name="Image" Grid.Row="0" Source="/Assets/Images/background.jpg" HorizontalAlignment="Stretch"/>
                <TextBlock x:Name="TileName" Grid.Row="1" Text="Принести флешку торговцу" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="Yellow" Background="#00000000"/>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
